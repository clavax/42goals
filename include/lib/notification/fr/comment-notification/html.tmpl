<table width="100%" align="center" style="border-collapse:collapse;" cellpadding="0" cellspacing="0" border="0">
    <tr>
        <td colspan="2">
            {email-tag tag="p"}
                Bonjour, {$user['name']}.<br />
                Vous avez reçu un nouveau commentaire de {$Conf.ENV.user.name}:
            {/email-tag}
        </td>
    </tr>
    <tr>
        <td width="60" align="center">
            <img src="{$host}{if $Conf->ENV->user->thumbnail}{@userpics}{$Conf.ENV.user.thumbnail}{else}{@img}site/no-thumbnail.png{end}" width="50" height="50" />
        </td>
        <td>
            {email-tag tag="p"}{$data['text']}{/email-tag}
        </td>
    </tr>
    <tr>
        <td colspan="2">
            {email-tag tag="p"}Voir le commentaire: <a href="{$host}{$url}#comment-{$data['id']}" target="_blank">{$host}{$url}#comment-{$data['id']}</a>{/email-tag}
            {email-tag tag="p"}Répondre commentaire: <a href="{$host}{$url}#reply-{$data['id']}" target="_blank">{$host}{$url}#reply-{$data['id']}</a>{/email-tag}
            {email-tag tag="p"}- L'équipe 42goals{/email-tag}
        </td>
    </tr>
</table>