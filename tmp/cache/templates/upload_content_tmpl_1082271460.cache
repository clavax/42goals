<?php echo '<script'?> type="text/javascript">
document.scrollLeft = function () {
    return self.pageXOffset
        || (document.documentElement && document.documentElement.scrollLeft)
        || (document.body && document.body.scrollLeft);
};
document.scrollTop = function () {
    return self.pageYOffset
        || (document.documentElement && document.documentElement.scrollTop)
        || (document.body && document.body.scrollTop);
};

function cursor (event) {
    var x = 0, y = 0;

    if (event.pageX || event.pageY) {
        x = event.pageX;
        y = event.pageY;
    } else if (event.clientX || event.clientY) {
        x = event.clientX + document.scrollLeft();
        y = event.clientY + document.scrollTop();
    } else if (event.screenX || event.screenY) {
        x = event.screenX;
        y = event.screenY;
    }

    return {x: x, y: y};
};

document.body.onload = function () {
    window.WEBKIT = navigator.userAgent.match('WebKit') != null;
    window.uploader = document.getElementsByTagName('INPUT')[0];
    uploader.style.position = 'absolute';
    document.body.onmousemove = function (event) {
        event = event || window.event;
        var xy = cursor(event);
        if (WEBKIT) {
            uploader.style.left = xy.x - 10 + 'px';
        } else {
            uploader.style.left = xy.x - uploader.offsetWidth + 10 + 'px';
        }
        uploader.style.top = xy.y - 10 + 'px';
    };
};
</script>