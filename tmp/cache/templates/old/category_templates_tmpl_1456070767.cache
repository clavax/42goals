<ul id="category-list">
    <?php foreach ($categories as $category) {?>
    <h2><?php echo (isset($category['title']) ? $category['title'] : '')?>
</h2>
    <ul id="category-templates">
        <?php foreach ($templates as $template) {?>
            <?php if ($template['category'] == $category['id']) {?>
        <li>
            <img src="<?php echo (isset($template['icon']) ? $template['icon'] : '')?>
" />
            <a href="<?php echo ($Conf->URL->has('this') ? $Conf->URL->{"this"} : 'this')?><?php echo (isset($category['name']) ? $category['name'] : '')?>
/<?php echo (isset($template['name']) ? $template['name'] : '')?>
/"><?php echo (isset($template['title']) ? $template['title'] : '')?>
</a>
        </li>
            <?php }?>
        <?php }?>
    </ul>
    <?php }?>
</ul>