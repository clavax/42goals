<?php foreach ($comments as $comment) {?>
<li id="comment-<?php echo (isset($comment['id']) ? $comment['id'] : '')?>
">
    <img src="<?php if ($comment['user']['thumbnail']) {?><?php echo ($Conf->URL->has('userpics') ? $Conf->URL->{"userpics"} : 'userpics')?><?php echo (isset($comment['user']['thumbnail']) ? $comment['user']['thumbnail'] : '')?>
<?php } else {?><?php echo ($Conf->URL->has('img') ? $Conf->URL->{"img"} : 'img')?>site/no-thumbnail.png<?php }?>" class="userpic" />
    <div class="comment">
        <b><a href="<?php echo ($Conf->URL->has('home') ? $Conf->URL->{"home"} : 'home')?>users/<?php echo (isset($comment['user']['login']) ? $comment['user']['login'] : '')?>
/"><?php echo (isset($comment['user']['name']) ? $comment['user']['name'] : '')?>
</a></b>
        <div class="text"><?php echo htmlspecialchars($comment['text'])?></div>
        <div class="meta">
            <small><?php echo locales::datetime($comment['date'])?></small>
            <?php if (Access::loggedIn()) {?><a href="#reply-<?php echo (isset($comment['id']) ? $comment['id'] : '')?>
" class="script"><?php echo ($Conf->LNG->has('reply') ? $Conf->LNG->{"reply"} : 'reply')?></a><?php }?>
        </div>
    </div>
    <?php if ($comment['replies']) {?>
    <ul>
    <?php echo CommentsTag::buildTree($comment['replies'])?>
    </ul>
    <?php }?>
</li>
<?php }?>
