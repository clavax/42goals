<ul id="user-posts-list">
<?php foreach ($posts as $post) {?>
    <li>
        <h2>
            <a href="<?php echo (isset($baseurl) ? $baseurl : '')?>
<?php echo (isset($post['id']) ? $post['id'] : '')?>
/"><?php echo htmlspecialchars($post['title'])?></a>
        </h2>
        <div class="meta">
            <small><?php echo locales::datetime($post['date'])?></small>
            <?php if (isset($post['name'])) {?>
            <a href="<?php echo ($Conf->URL->has('home') ? $Conf->URL->{"home"} : 'home')?>users/<?php echo (isset($post['login']) ? $post['login'] : '')?>
/" class="user"><?php echo htmlspecialchars($post['name'])?></a>
            <?php }?>
            <?php if (isset($post['community_title'])) {?>
            <a href="<?php echo ($Conf->URL->has('home') ? $Conf->URL->{"home"} : 'home')?>communities/<?php echo (isset($post['community_name']) ? $post['community_name'] : '')?>
/" class="user"><?php echo htmlspecialchars($post['community_title'])?></a>
            <?php }?>
            <?php if ($post['type'] == 'link') {?>
                <a href="<?php echo htmlspecialchars($post['url'])?>" class="url"><img src="<?php echo ($Conf->URL->has('img') ? $Conf->URL->{"img"} : 'img')?>site/link.png" alt="&rarr;" /><?php echo htmlspecialchars(url::shorten($post['url'], 50, "..."))?></a>
            <?php }?>
            <a href="<?php echo (isset($baseurl) ? $baseurl : '')?>
<?php echo (isset($post['id']) ? $post['id'] : '')?>
/#reply-0" class="comments">
                <?php if ($post['comments'] > 0) {?>
                    <?php echo (isset($post['comments']) ? $post['comments'] : '')?>

                <?php }?>
                <img src="<?php echo ($Conf->URL->has('img') ? $Conf->URL->{"img"} : 'img')?>site/comment.png" alt="<?php echo ($Conf->LNG->has('comment') ? $Conf->LNG->{"comment"} : 'comment')?>" />
            </a>
        </div>
        <div class="preview clearfix">
            <?php if (isset($post['image']) && !empty($post['image'])) {?><img src="<?php echo htmlspecialchars($post['image'])?>" /><?php }?>
            <?php echo (isset($post['preview']) ? $post['preview'] : '')?>

        </div>
    </li>
<?php }?>
</ul>