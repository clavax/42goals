<?xml version="1.0"?>
<model>
	<table type="primary">
		<field name="id"></field>
        <field name="name" required="yes"></field>
        <field name="email" required="yes" unique="i">
            <validate>
                <function>
                    <class>validate</class>
                    <method>email</method>
                </function>
                <argument>email</argument>
                <error>invalid</error>
            </validate>
        </field>
   		<field name="login" required="yes" unique="i">
            <validate>
                <function>
                    <class>UsersModel</class>
                    <method>validateLogin</method>
                </function>
                <argument>login</argument>
                <error>invalid</error>
            </validate>
   		</field>
		<field name="password" required="yes"></field>
        <field name="email_confirmation"></field>
        <field name="password_recovery"></field>
        <field name="status"></field>
        <field name="new_email">
            <validate>
                <function>
                    <class>validate</class>
                    <method>email</method>
                </function>
                <argument>new_email</argument>
                <error>invalid</error>
            </validate>
        </field>
        <field name="paid_till"></field>
        <field name="picture"></field>
        <field name="thumbnail"></field>
        <field name="location"></field>
        <field name="url"></field>
        <field name="bio"></field>
        <field name="public"></field>
        <field name="geo"></field>
        <field name="language"></field>
        <field name="registered"></field>
        <field name="receive_emails"></field>
    </table>
</model>