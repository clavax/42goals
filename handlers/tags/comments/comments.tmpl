<div id="comments-list">
    <h3>{~Comments}</h3>
    <div class="up-corner-bd"></div>
    <div class="up-corner-bg"></div>
    {if $comments}
    <ul>
        {$comments|CommentsTag::buildTree}
    </ul>
    {end}
    <p class="leave-comment">
    {if Access::loggedIn()}
        <a href="#reply-0" class="script">{~Leave_comment}</a>
    {else}
        <a href="{@home}login/{if $Conf->URL->self != $Conf->URL->home}?redirect={$Conf.URL.self|urlencode}{end}" class="btn button"><span><span>{~Login_to_comment}</span></span></a>
        <span>{~or}</span>
            <a href="{@home}system/twitter/connect/{if $Conf->URL->self != $Conf->URL->home}?redirect={$Conf.URL.self|urlencode}{end}" class="btn"><img src="{@img}site/login-with-twitter.png" alt="Sign in with Twitter" /></a>
            <a href="{@home}system/facebook/connect/{if $Conf->URL->self != $Conf->URL->home}?redirect={$Conf.URL.self|urlencode}{end}" class="btn"><img src="{@img}site/login-with-facebook.png" alt="Sign in with Facebook" /></a>
        </p>
    {end}
    </p>
</div>