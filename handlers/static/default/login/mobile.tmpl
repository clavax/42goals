{if Access::loggedIn()}
<p id="welcome">{~Salom}, {$Conf.ENV.user}!</p>
{else}
<form id="auth" action="{@self}" method="post" onsubmit="Auth.login(this); return false;">
    <fieldset>
        <input type="hidden" name="redirect" value="{$redirect}" />
        <ul class="fields">
            <li class="third-party">
                <a href="{@home}system/twitter/connect/?redirect={$redirect}" class="btn"><img src="{@img}site/login-with-twitter.png" alt="Sign in with Twitter" /></a>
                <a href="{@home}system/facebook/connect/?redirect={$redirect}" class="btn"><img src="{@img}site/login-with-facebook.png" alt="Sign in with Facebook" /></a>
            </li>
            <li>
                <label for="auth-login">{~Login}:</label> 
                <input id="auth-login" class="text" name="login" />
            </li>
            <li>
                <label for="auth-password">{~Password}:</label> 
                <input id="auth-password" class="text" type="password" name="password" />
            </li>
            <li>
                <input type="checkbox" id="auth-remember" name="remember" />
                <label for="auth-remember" class="inline">{~remember_me}</label>
            </li>
        </ul>
        <div class="button">
            <button type="submit">{~Sign_in}</button>
        </div>
    </fieldset>
</form>
{end}